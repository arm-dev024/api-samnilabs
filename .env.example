# Google OAuth — obtain from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# JWT — used to sign access tokens stored in HTTP-only cookies
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# App
FRONTEND_URL=http://localhost:5173
APP_ENV=development

# DynamoDB — use "local" credentials for local dev, real AWS creds in production
DYNAMODB_ENDPOINT_URL=http://localhost:8020
DYNAMODB_REGION=us-east-1
DYNAMODB_TABLE_NAME=samnilabs_users
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Server
PORT=8000
HOST=0.0.0.0
SERVER_URL=http://localhost:8000